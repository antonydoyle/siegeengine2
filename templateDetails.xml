<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.7//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
	<name>SiegeEngine2</name>
	<creationDate>April, 2013</creationDate>
	<author>Antony Doyle</author>
	<authorEmail>antony@siege21.com</authorEmail>
	<authorUrl>http://www.antonydoyle.co.uk</authorUrl>
	<copyright>Copyright (C) 2013 Antony Doyle | Siege21.com | Siegeworks. All rights Reserved</copyright>
	<license>GNU General Public License version 2 or later</license>
	<version>2.0.3</version>	
	<description>TPL_SIEGEENGINE_DESCRIPTION</description>

	<files>
        <filename>index.php</filename>
		<filename>framework.php</filename>
        <filename>templateDetails.xml</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>language</folder>
		<folder>js</folder>
	</files>

	<positions>
		<position>breadcrumbs</position>
		<position>top</position>
		<position>above</position>
		<position>above-content</position>
		<position>left</position>
		<position>right</position>
		<position>below-content</position>
		<position>below</position>
		<position>footer</position>
	</positions>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_siegeengine2.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_siegeengine2.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="TPL_SETTINGS_HEADER_ONE_TITLE" label="TPL_SETTINGS_HEADER_ONE_DESC" addfieldpath="/templates/siegeengine/" >
				<field name="loadMoo" type="radio" default="0" label="TPL_SETTINGS_LOAD_MOO_LABEL" description="TPL_SETTINGS_LOAD_MOO_DESC">
					<option value="1">TPL_SETTINGS_LOAD_MOO_YES</option>
					<option value="0">TPL_SETTINGS_LOAD_MOO_NO</option>
				</field>
<field name="jQuery" type="radio" default="1" label="TPL_SETTINGS_LOAD_JQUERY_LABEL" description="TPL_SETTINGS_LOAD_JQUERY_DESC">
					<option value="1">TPL_SETTINGS_LOAD_JQUERY_YES</option>
					<option value="0">TPL_SETTINGS_LOAD_JQUERY_NO</option>
				</field>
				<field name="jQueryOff" type="radio" default="0" label="TPL_SETTINGS_LOAD_JQUERYOFF_LABEL" description="TPL_SETTINGS_LOAD_JQUERYOFF_DESC">
					<option value="1">TPL_SETTINGS_LOAD_JQUERYOFF_YES</option>
					<option value="0">TPL_SETTINGS_LOAD_JQUERY_NO</option>
				</field>
				<field name="noConflict" type="radio" default="0" label="jQuery noConflict?" description="Force jQuery into noConflict Mode - note, it isn't proper noConflict mode. It just changes $ to jQuery">
					<option value="1">TPL_SETTINGS_LOAD_JQUERYOFF_YES</option>
					<option value="0">TPL_SETTINGS_LOAD_JQUERY_NO</option>
				</field>
				<field type="spacer" default=" " />	
				<field type="spacer" default=" " />
					<field name="setWidth" type="text" default="1000" label="TPL_SETTINGS_SETWIDTH_LABEL" description="TPL_SETTINGS_SETWIDTH_DESC" size="15" />
					<field name="widthUnit" type="radio" default="px" label="Set width in px or %" description="">
					  <option value="px">1</option>
					  <option value="%">2</option>
					</field>
					<field name="setGeneratorTag" type="text" default="" label="TPL_SETTINGS_GENERATOR_LABEL" description="TPL_SETTINGS_GENERATOR_DESC" size="85" />
					<field name="analytics" type="text" default="UA-XXXXX-X" label="TPL_SETTINGS_ANALYTICS_LABEL" description="TPL_SETTINGS_ANALYTICS_DESC" size="15" />
					<field name="topbarTitle" type="text" default="SiegeEngine2" label="TPL_SETTINGS_TOPBAR_LABEL" description="TPL_SETTINGS_TOPBAR_DESC" size="15" />
					<field name="customCSS" type="filelist" default="" label="TPL_SETTINGS_CUSTOM_CSS_LABEL" description="TPL_SETTINGS_CUSTOM_CSS_DESC" directory="templates/siegeengine2/css/" filter="" exclude="foundation\.css|templateCore\.css|index\.html" stripext="" />
					<field name="rightwidth" type="list" default="4" label="TPL_SETTINGS_RIGHTWIDTH" description="TPL_SETTINGS_ANALYTICS_DESC" size="15">
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">6</option>
						<option value="6">6</option>
						<option value="7">7</option>
						<option value="8">8</option>
						<option value="9">9</option>
						<option value="10">10</option>
						<option value="11">11</option>
						<option value="12">12</option>
					</field>
					<field name="leftwidth" type="list" default="4" label="TPL_SETTINGS_LEFTWIDTH" description="TPL_SETTINGS_ANALYTICS_DESC" size="15" >
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">6</option>
						<option value="6">6</option>
						<option value="7">7</option>
						<option value="8">8</option>
						<option value="9">9</option>
						<option value="10">10</option>
						<option value="11">11</option>
						<option value="12">12</option>
					</field>

			</fieldset>			
		</fields>
	</config>
</extension>